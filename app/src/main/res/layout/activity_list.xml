<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ListActivity">

    <TextView
        android:id="@+id/tv_http"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:onClick="jumpActivity"
        android:text="网络请求(Rxjava&amp;Rertrofit)"
        android:textColor="#333"
        android:textSize="13sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333"/>
    <TextView
        android:id="@+id/tv_rxbus"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:onClick="jumpActivity"
        android:text="RxBus的使用"
        android:textColor="#333"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/tv_http"/>
</android.support.constraint.ConstraintLayout>