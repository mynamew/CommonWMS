<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".view.ListActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/tv_http"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="jumpActivity"
                android:text="网络请求(Rxjava&amp;Rertrofit)"
                android:textAllCaps="false"
                android:textColor="#333"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/tv_rxbus"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="jumpActivity"
                android:text="RxBus的使用"
                android:textAllCaps="false"
                android:textColor="#333"
                android:textSize="13sp"
                />

            <Button
                android:id="@+id/tv_update_version"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="jumpActivity"
                android:text="更新版本"
                android:textAllCaps="false"
                android:textColor="#333"
                android:textSize="13sp"
                />

            <Button
                android:id="@+id/tv_update_spinner"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="jumpActivity"
                android:text="Spinner的使用"
                android:textAllCaps="false"
                android:textColor="#333"
                android:textSize="13sp"
                />

            <Button
                android:id="@+id/tv_update_qrcode"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="jumpActivity"
                android:text="QrCode的使用（zxing扫码和生成）"
                android:textAllCaps="false"
                android:textColor="#333"
                android:textSize="13sp"
                />

            <Button
                android:id="@+id/tv_img"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="jumpActivity"
                android:text="加载图片（Glide）"
                android:textAllCaps="false"
                android:textColor="#333"
                android:textSize="13sp"
                />

            <Button
                android:id="@+id/tv_rxjava_zip"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:onClick="jumpActivity"
                android:text="合并请求(Rxjava Zip)"
                android:textAllCaps="false"
                android:textColor="#333"
                android:textSize="13sp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>