<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.spinner.SpinnerActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Spinner的使用"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:background="@color/colorPrimary"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Spinner的选择的位置："
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_select_position"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="Spinner的选择的位置"
            android:textColor="#fff"/>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="10dp"
       android:background="@drawable/bg_rectangle_et_unfocused"
       android:orientation="horizontal"
       android:padding="5px"
       android:layout_height="wrap_content">
       <com.jzk.spinnerlibrary.MaterialSpinner
           android:id="@+id/spinner"
           android:layout_width="match_parent"
           android:layout_height="44dp"/>
   </LinearLayout>
</LinearLayout>